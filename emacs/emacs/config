#!/bin/bash
BUILD_DIR=$(pwd)/build

(
    cd src/ || exit 2

    ./configure \
	   --prefix="$BUILD_DIR" \
     --exec-prefix="$BUILD_DIR" \
     --without-sound \
     --with-cairo \
     --with-modules \
     --with-pdumper=yes \
     --with-imagemagick \
     --with-harfbuzz \
     --with-json
)
