# open specific applications in floating mode
for_window [class="feh"] floating enable border pixel 1
for_window [class="alsamixer"] floating enable border pixel 1
for_window [class="Lightdm-gtk-greeter-settings"] floating enable
for_window [class="Lxappearance"] floating enable sticky enable border normal
for_window [class="Manjaro-hello"] floating enable
for_window [class="Manjaro Settings Manager"] floating enable border normal
for_window [class="(?i)virtualbox"] floating enable border normal

for_window [title="em-bookmarks"] floating enable
for_window [title="em-bookmarks"] resize grow up 200px
for_window [title="em-bookmarks"] resize grow down 200px
for_window [title="em-bookmarks"] move position center

for_window [instance="mpv-float"] floating enable
for_window [instance="mpv-float"] move position center;

for_window [class="Termite" instance="dict-lookup"] floating enable
for_window [class="Termite" instance="dict-lookup"] resize grow up 200px
for_window [class="Termite" instance="dict-lookup"] resize grow down 200px

for_window [class="Termite" instance="float-me"] floating enable
for_window [class="Termite" instance="float-me"] resize grow up 150px
for_window [class="Termite" instance="float-me"] resize grow down 150px
for_window [class="Termite" instance="float-me"] resize grow left 150px
for_window [class="Termite" instance="float-me"] resize grow right 150px
for_window [class="Termite" instance="float-me"] move position center

for_window [title="cl-opengl"] floating enable
for_window [class="anki"] floating enable
for_window [class="matplotlib"] floating enable
for_window [class="Matplotlib"] floating enable


