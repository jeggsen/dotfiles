[
    {
        "name": "ssh",
        "src": "~/.ssh/",
        "dest": "~/repo/ssh/",
        "args": ["--backup"],
        "mounts": ["~/repo/"]
    },
    {
        "name": "gpg",
        "src": "~/.gnupg",
        "dest": "~/vault/backups/keys/",
        "args": ["--backup"]
    },
    {
        "name": "pass",
        "src": "~/.password-store",
        "dest": "~/vault/backups/keys/",
        "args": ["--backup"]
    }
]
