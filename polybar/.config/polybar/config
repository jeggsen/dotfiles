[colors]
background     = #3f3f3f
background-alt = #313131
foreground     = #f0dfaf
foreground-alt = #dcdccc
primary        = #f0dfaf
secondary      = #313131
alert          = #bd2c40

[settings]
screenchange-reload = true

[bar/topbar]
monitor = ${env:MONITOR:eDP1}
width = 100%
height = 14
fixed-center = true
wm-restack = i3

background = ${colors.background}
foreground = ${colors.foreground}

font-0 = "Source Code Pro Semibold:size=9;2"
font-1 = "Symbols Nerd Font:size=9;2"

module-margin = 4

modules-left = i3
modules-center = alsa vpn filesystem cpu memory battery gpg-cache date wifiicon
modules-right = mounts

tray-position = right
tray-detached = true
tray-padding = 10
tray-background = ${colors.background}

[module/i3]
type = internal/i3
index-sort = true
enable-scroll = false
pin-workspaces = true

format = <label-state> <label-mode>

label-mode-padding = 1
label-visible-padding = 1

; focused = Active workspace on focused monitor
label-focused = %name%
label-focused-background = ${colors.background-alt}
label-focused-padding = 1

; unfocused = Inactive workspace on any monitor
label-unfocused = %name%
label-unfocused-padding = 1

; urgent = Workspace with urgency hint set
label-urgent = %name%
label-urgent-background = ${colors.alert}
label-urgent-padding = 1

[module/wifiicon]
type = custom/script
exec = /usr/local/bin/wifiicon
format = <label>
label =  %{F#8f}%output%%{F-}
interval = 11

[module/mounts]
type = custom/script
exec = /usr/local/bin/mounts
format = <label>
label =  %output% %{F#8f}%{F-}
interval = 11

[module/gpg-cache]
type = custom/script
exec = /usr/local/bin/gpg-cached
format = <label>
label = %{F#8f}%{F-} %output%
interval = 61

[module/countdown]
type = custom/script
exec = /usr/local/bin/countdown
format = <label>
label = %{F#8f}%{F-} %output%
interval = 45

[module/vpn]
type = custom/script
exec = /usr/local/bin/ipinfo
format = <label>
label = %{F#8f}%{F-} %output%
interval = 100

[module/notmuch-unread]
type = custom/script
exec = /usr/local/bin/notmuch-unread
format = <label>
label = %{F#8f}%{F-} %output%
interval = 61

[module/filesystem]
type = custom/script
exec = /usr/local/bin/freespace
format = <label>
label = %{F#8f}%{F-} %output%
interval = 61

[module/cpu]
type = internal/cpu
interval = 2
format = %{F#8f}λ%{F-} <label>
label = %percentage:2%

[module/memory]
type = internal/memory
interval = 2
label = %{F#8f}Σ%{F-} %percentage_used:2%

[module/date]
type = custom/script
exec = /usr/local/bin/nowdate
format = <label>
interval = 17
label = %{F#8f}%{F-} %output%

[module/alsa]
type = internal/alsa
label-volume = %{F#8f}%{F-} %percentage:2%
label-muted = %{F#8f}%{F-} %percentage:2%
handle-events = false

[module/battery]
type = internal/battery
battery = BAT0
adapter = AC
label-charging = %{F#8f}%{F-} %percentage:2%+
label-discharging = %{F#8f}%{F-} %percentage:2%-

