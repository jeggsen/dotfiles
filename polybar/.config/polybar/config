[colors]
background = #3f3f3f
background-alt = #313131
foreground = #f0dfaf
foreground-alt = #dcdccc
primary = #f0dfaf
secondary = #313131
alert = #bd2c40

[bar/jensbar]
monitor = ${env:MONITOR:eDP1}
width = 100%
height = 20

background = ${colors.background}
foreground = ${colors.foreground}

module-margin-left = 4
module-margin-right = 4

font-0 = "Source Code Pro Semibold:size=8;2"
font-1 = "Material Icons:size=10;4"
font-2 = "Noto Sans CJK SC:size=10;4"

modules-left = i3
modules-center = alsa notmuch-unread filesystem temps cpu memory battery date  gpg-cache
modules-right =

tray-position = right
tray-detached = true
tray-padding = 10
tray-background = ${colors.background}

[module/gpg-cache]
type = custom/script
exec-if = /usr/local/bin/gpg-cached
exec = echo key
format = <label>
label = %{F#8f}%{F-}
interval = 61

[module/notmuch-unread]
type = custom/script
exec = /usr/local/bin/notmuch-unread
format = <label>
label = %{F#8f}%{F-} %output%
interval = 61

[module/temps]
type = custom/script
exec = /usr/local/bin/temps
format = <label>
label = %{F#8f}%{F-} %output%
interval = 5

[module/i3]
type = internal/i3
index-sort = true
wrapping-scroll = false
pin-workspaces = true

format = <label-state> <label-mode>

label-mode-padding = 1
label-visible-padding = 1

; focused = Active workspace on focused monitor
label-focused = %name%
label-focused-background = ${colors.background-alt}
label-focused-padding = 2

; unfocused = Inactive workspace on any monitor
label-unfocused = %name%
label-unfocused-padding = 2

; urgent = Workspace with urgency hint set
label-urgent = %name%
label-urgent-background = ${colors.alert}
label-urgent-padding = 1

[module/filesystem]
type = internal/fs
interval = 7
mount-0 = /
label-mounted = %{F#8f}%{F-} %free:5%

[module/cpu]
type = internal/cpu
interval = 2
format = %{F#8f}λ%{F-} <label>
label = %percentage:2%

[module/memory]
type = internal/memory
interval = 2
label = %{F#8f}Σ%{F-} %percentage_used:2%

[module/date]
type = internal/date
interval = 5
date = %Y-%m-%d
time = %H:%M
label = %{F#8f}%{F-} %date% %time%

[module/alsa]
type = internal/alsa
label-volume = %{F#8f}%{F-} %percentage:2%
label-muted = %{F#8f} %{F-}%percentage:2%
handle-events = false

[module/battery]
type = internal/battery
battery = BAT0
adapter = AC
label-charging = %{F#8f}%{F-} %percentage:2%+
label-discharging = %{F#8f}%{F-} %percentage:2%-

[settings]
screenchange-reload = true
