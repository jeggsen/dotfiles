#!/bin/bash

set -e
set -o pipefail

err() { echo -e "$*" >&2; }
err_exit() { err "$@"; exit 1; }
info() { printf "\n%s %s\n\n" "$DATE" "$*" >&2; }

trap 'err_exit "[$DATE] Backup interrupted"' INT TERM

SNAPSHOT_DIR="$HOME/sync/.snapshots/borg"
BORG_PATH="$SNAPSHOT_DIR::{hostname}--{user}--{now}"

if [ ! -d "$SNAPSHOT_DIR" ]; then
    err_exit "snapshot directory not found"
fi

dirs=(
    "/boot/efi"
    "/boot/grub"
    "/etc"
    "/srv"
    "$HOME/.config"
)

DATE=$(date +%Y-%m-%d--%H:%M:%S)

borg create \
     --stats \
     --progress \
     --verbose \
     --filter AME \
     --list \
     --show-rc \
     --compression zstd \
     --exclude-caches \
     --exclude '/home/*/.config/chromium/*' \
     --exclude '/home/*/.config/Electron/*' \
     --exclude '/home/*/.config/mpv/watch_later/*' \
     "$BORG_PATH" \
     "${dirs[@]}"

backup_exit=$?

borg prune \
     --list \
     --prefix '{hostname}--' \
     --show-rc \
     --keep-daily   7 \
     --keep-weekly  4 \
     --keep-monthly 12 \
     "$SNAPSHOT_DIR"

prune_exit=$?

# use highest exit code as global exit code
global_exit=$(( backup_exit > prune_exit ? backup_exit : prune_exit ))

if [ ${global_exit} -eq 0 ]; then
    info "Backup and Prune finished successfully"
elif [ ${global_exit} -eq 1 ]; then
    info "Backup and/or Prune finished with warnings"
else
    info "Backup and/or Prune finished with errors"
fi

exit ${global_exit}
