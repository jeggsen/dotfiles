#!/bin/bash

today=$(notmuch search date:today.. and tag:unread and not tag:lists and not tag:draft and not tag:archived | wc -l | xargs)
week=$(notmuch search date:7d.. and tag:unread and not tag:lists and not tag:draft and not tag:archived | wc -l | xargs)
unread=$(notmuch search tag:unread and not tag:lists and not tag:draft and not tag:archived | wc -l | xargs)

echo "$today/$week/$unread"
