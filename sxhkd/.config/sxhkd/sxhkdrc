# * system
# ** brightness
XF86MonBrightnessUp
    backlightctl intel_backlight +5%

shift + XF86MonBrightnessUp
    backlightctl intel_backlight +1%

XF86MonBrightnessDown
    backlightctl intel_backlight 5%-

shift + XF86MonBrightnessDown
    backlightctl intel_backlight 1%-

ctrl + XF86MonBrightnessUp
    backlightctl ddcci5 +5%

ctrl + XF86MonBrightnessDown
    backlightctl ddcci5 5%-

# ** audio
XF86AudioRaiseVolume
    volctl -d pulse -s 0 -v 2

XF86AudioLowerVolume
    volctl -d pulse -s 0 -v -2

XF86AudioMute
    volctl -d pulse -s Master -v toggle

# ** screenshotting
@super + Print
    scrshot -d "~/private/screenshots/"

@super + shift + Print
    scrshot -s -d "~/private/screenshots/"

# * shortcuts

super + Return
    $TERMINAL -e tmux

super + shift + Return
    $TERMINAL

super + ctrl + Return
    popterm tmux

super + m
    $TERMINAL -e tmux -c ranger

super + p
    $TERMINAL -e 'htop'

super + BackSpace
    $BROWSER

super + Delete
    $EDITOR

super + d
    rofi -show run

super + shift + d
    define "$(xsel -o)"

super + y
    myt $(xsel -o) -

ctrl + super + y
    myt $(xsel -o)

super + shift + b
    emacsclient -c -F '((title . "em-bookmarks"))' '~/vault/org/bookmarks.org'

# * misc
super + shift + g
    autorandr -c && sleep .2 && dimmer

super + l
    slock

# * polybar
# ** restart polybar
super + shift + p
    polybar-setup; notify-send 'Restarted polybar'


