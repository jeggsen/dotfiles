# * system
# ** brightness
XF86MonBrightnessUp
    brightctl intel_backlight +5%

shift + XF86MonBrightnessUp
    brightctl intel_backlight +1%

XF86MonBrightnessDown
    brightctl intel_backlight 5%-

shift + XF86MonBrightnessDown
    brightctl intel_backlight 1%-

ctrl + XF86MonBrightnessUp
    brightctl ddcci5 +5%

ctrl + XF86MonBrightnessDown
    brightctl ddcci5 5%-

# ** audio
XF86AudioRaiseVolume
    volctl -d pulse -s 0 -v +1%

XF86AudioLowerVolume
    volctl -d pulse -s 0 -v -1%

XF86AudioMute
    volctl -d pulse -s Master -v toggle

# ** screenshotting
@super + Print
    scrot '%Y-%m-%d_%H:%M:%S_$wx$h.png' -e 'mv $f ~/private/screenshots/' && notify-send "screen shot"

@super + shift + Print
    scrot -s '%Y-%m-%d_%H:%M:%S_$wx$h.png' -e 'mv $f ~/private/screenshots/' && notify-send "screen grabbed"

# * shortcuts

super + Return
    $TERMINAL -e tmux

super + shift + Return
    $TERMINAL

super + ctrl + Return
    $TERMINAL --class Alacritty,float

super + m
    $TERMINAL -e tmux -c ranger

super + p
    $TERMINAL -e 'htop'

super + BackSpace
    $BROWSER

super + Delete
    $EDITOR

super + d
    rofi -show run

super + shift + d
    define "$(xsel -o)"

super + y
    mpv --autofit="70%x60%" --loop --x11-name="mpv-float" $(echo `xsel -o` | sed 's/invidios.snopyta.org/youtube.com/' | sed 's/subscriptions.gir.st/youtube.com/')

super + shift + b
    emacsclient -c -F '((title . "em-bookmarks"))' '~/vault/org/bookmarks.org'

# * misc
super + shift + g
    autorandr -c && sleep .2 && dimmer

super + l
    slock

# * polybar
# ** restart polybar
super + shift + p
    polybar-setup; notify-send 'Restarted polybar'


