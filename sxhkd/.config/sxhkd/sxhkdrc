# * system
# ** brightness
XF86MonBrightnessUp
    brightctl intel_backlight +5%

shift + XF86MonBrightnessUp
    brightctl intel_backlight +1%

XF86MonBrightnessDown
    brightctl intel_backlight 5%-

shift + XF86MonBrightnessDown
    brightctl intel_backlight 1%-

ctrl + XF86MonBrightnessUp
    brightctl ddcci5 +5%

ctrl + XF86MonBrightnessDown
    brightctl ddcci5 5%-

# ** audio
XF86AudioRaiseVolume
    pactl set-sink-volume 0 +1db

XF86AudioLowerVolume
    pactl set-sink-volume 0 -1db

XF86AudioMute
    amixer -D pulse set Master 1+ toggle

# ** screenshotting
@super + Print
    scrot '%Y-%m-%d_%H:%M:%S_$wx$h.png' -e 'mv $f /home/jens/private/screenshots/' && notify-send "screen shot"

@super + shift + Print
    scrot -s '%Y-%m-%d_%H:%M:%S_$wx$h.png' -e 'mv $f /home/jens/private/screenshots/' && notify-send "screen grabbed"

# * shortcuts

super + Return
    $TERMINAL -e tmux

super + shift + Return
    $TERMINAL

super + ctrl + Return
    $TERMINAL --class "float"

super + m
    $TERMINAL -e tmux -c ranger

super + p
    $TERMINAL -e 'htop'

super + BackSpace
    $BROWSER

super + Delete
    $EDITOR

super + d
    rofi -show run

super + shift + d
    define "$(xsel -o)"

super + y
    mpv --ytdl --ytdl-raw-options=format="bestvideo[height<=?1080]+bestaudio/best[height<=1080]" --autofit="70%x60%" --loop --x11-name="mpv-float" $(xsel -o)

super + shift + b
    emacsclient -c -F '((title . "em-bookmarks"))' '~/vault/git/bookmarks.org'

# * misc
super + shift + u
    xdotool key XF86Ungrab && notify-send "ungrabbed"

super + shift + g
    autorandr -c && sleep .2 && dimmer

super + l
    slock

# * polybar
# ** restart polybar
super + shift + p
    polybar-setup; notify-send 'Restarted polybar'


